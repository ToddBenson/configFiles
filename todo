colo darkblue
set syn=on
set foldmethod=marker
map #3 a *Done*
map #2 a *Work*
map #1 a *ToDo* 

syn match title 'Security Anchor'
syn match hyperLinks 'https://.*'
syn match hyperLinks1 'http://.*'
syn match hyperLinks2 'file://.*'
syn match project '^-.*:{{{'
syn match project1 '}}}'
syn match done '*Done\S'
syn match pending '*Work\S'
syn match future '*ToDo\S'
hi def link done WarningMsg
hi title ctermfg=White ctermbg=Red cterm=bold
hi pending ctermfg=Yellow ctermbg=NONE cterm=bold
hi def link future Type
hi project ctermfg=Brown 
hi project1 ctermfg=Brown
hi hyperLinks ctermfg=Blue ctermbg=NONE cterm=underline
hi hyperLinks1 ctermfg=Blue ctermbg=NONE cterm=underline
hi hyperLinks2 ctermfg=Blue ctermbg=NONE cterm=underline
